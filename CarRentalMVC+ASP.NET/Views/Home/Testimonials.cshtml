<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .testimonial-item {
        position: relative;
        transition: all 0.3s;
    }
    
    .testimonial-item:hover {
        transform: translateY(-5px);
    }
    
    .testimonial-quote {
        position: absolute;
        top: -15px;
        right: 30px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bs-primary);
        color: #fff;
        border-radius: 50%;
        z-index: 1;
    }
    
    .rating-stars {
        color: #ffc107;
        cursor: pointer;
    }
    
    .rating-stars .rating-star {
        margin-right: 5px;
        transition: all 0.2s;
    }
    
    .rating-stars .rating-star:hover,
    .rating-stars .rating-star.active {
        transform: scale(1.2);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Rating stars functionality
            $('.rating-star').click(function() {
                var value = $(this).data('value');
                $('#rating').val(value);
                
                $('.rating-star').removeClass('fas').addClass('far');
                $('.rating-star').removeClass('active');
                
                for (var i = 1; i <= value; i++) {
                    $('.rating-star[data-value="' + i + '"]').removeClass('far').addClass('fas').addClass('active');
                }
            });
            
            // Category filter
            $('.btn[data-filter]').click(function() {
                $(this).addClass('active').removeClass('btn-outline-primary').addClass('btn-primary')
                    .siblings().removeClass('active').removeClass('btn-primary').addClass('btn-outline-primary');
                    
                var category = $(this).data('filter');
                
                if (category === 'all') {
                    $('.testimonial-grid-item').fadeIn();
                } else {
                    $('.testimonial-grid-item').hide();
                    $('.testimonial-grid-item[data-category="' + category + '"]').fadeIn();
                }
            });
        });
    </script>
} 