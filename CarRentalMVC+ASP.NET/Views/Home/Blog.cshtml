@{
    ViewBag.Title = "Our Blog";
}

<!-- Header Banner -->
<div class="container-fluid bg-primary py-5 mb-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-4 text-white animated slideInDown mb-4">Cental Blog</h1>
                <p class="fs-5 text-white mb-4">Latest news, travel tips, and automotive insights from our experts</p>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Blog</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Blog Section -->
<div class="container py-5">
    <div class="row g-5">
        <!-- Blog Post List -->
        <div class="col-lg-8">
            <!-- Featured Post -->
            <div class="blog-item mb-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="position-relative overflow-hidden rounded">
                    <img src="~/Content/img/blog-1.jpg" class="img-fluid w-100" alt="Blog Image">
                    <div class="blog-overlay">
                        <a class="btn btn-lg btn-primary px-3" href="#featured">Read More</a>
                    </div>
                </div>
                <div class="blog-content bg-light rounded p-4">
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-primary"><i class="far fa-calendar-alt me-2"></i>October 15, 2023</span>
                        <span class="text-muted"><i class="fas fa-user me-2"></i>Admin</span>
                    </div>
                    <h4 class="text-uppercase mb-3">10 Tips for a Great Road Trip Adventure</h4>
                    <p class="mb-4">Planning a road trip? From choosing the right rental car to mapping your route and packing essentials, our comprehensive guide covers everything you need for an unforgettable journey.</p>
                    <a class="btn btn-primary py-2 px-4" href="#featured">Read More</a>
                </div>
            </div>

            <!-- Regular Posts -->
            <div class="row g-4">
                <!-- Post 1 -->
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="blog-item h-100">
                        <div class="position-relative overflow-hidden rounded">
                            <img src="~/Content/img/blog-2.jpg" class="img-fluid w-100" alt="Blog Image">
                            <div class="blog-overlay">
                                <a class="btn btn-lg btn-primary px-3" href="#blog1">Read More</a>
                            </div>
                        </div>
                        <div class="blog-content bg-light rounded p-4 h-100">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-primary"><i class="far fa-calendar-alt me-2"></i>October 5, 2023</span>
                                <span class="text-muted"><i class="fas fa-user me-2"></i>Admin</span>
                            </div>
                            <h5 class="text-uppercase mb-3">How to Choose the Right Rental Car for Your Needs</h5>
                            <p class="mb-4">SUV or sedan? Economy or luxury? Learn how to select the perfect rental vehicle based on your travel plans, budget, and personal preferences.</p>
                            <a class="btn btn-sm btn-primary" href="#blog1">Read More</a>
                        </div>
                    </div>
                </div>

                <!-- Post 2 -->
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="blog-item h-100">
                        <div class="position-relative overflow-hidden rounded">
                            <img src="~/Content/img/blog-3.jpg" class="img-fluid w-100" alt="Blog Image">
                            <div class="blog-overlay">
                                <a class="btn btn-lg btn-primary px-3" href="#blog2">Read More</a>
                            </div>
                        </div>
                        <div class="blog-content bg-light rounded p-4 h-100">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-primary"><i class="far fa-calendar-alt me-2"></i>September 28, 2023</span>
                                <span class="text-muted"><i class="fas fa-user me-2"></i>Admin</span>
                            </div>
                            <h5 class="text-uppercase mb-3">The Benefits of Electric Vehicle Rentals</h5>
                            <p class="mb-4">Curious about electric cars? Renting an EV is a great way to experience this technology. Discover the advantages and what to expect when renting an electric vehicle.</p>
                            <a class="btn btn-sm btn-primary" href="#blog2">Read More</a>
                        </div>
                    </div>
                </div>

                <!-- Post 3 -->
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="blog-item h-100">
                        <div class="position-relative overflow-hidden rounded">
                            <img src="~/Content/img/attachment-img.jpg" class="img-fluid w-100" alt="Blog Image">
                            <div class="blog-overlay">
                                <a class="btn btn-lg btn-primary px-3" href="#blog3">Read More</a>
                            </div>
                        </div>
                        <div class="blog-content bg-light rounded p-4 h-100">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-primary"><i class="far fa-calendar-alt me-2"></i>September 15, 2023</span>
                                <span class="text-muted"><i class="fas fa-user me-2"></i>Admin</span>
                            </div>
                            <h5 class="text-uppercase mb-3">Understanding Rental Car Insurance Options</h5>
                            <p class="mb-4">Confused by CDW, LDW, and other insurance abbreviations? Our guide breaks down rental car insurance options to help you make informed decisions.</p>
                            <a class="btn btn-sm btn-primary" href="#blog3">Read More</a>
                        </div>
                    </div>
                </div>

                <!-- Post 4 -->
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="blog-item h-100">
                        <div class="position-relative overflow-hidden rounded">
                            <img src="~/Content/img/about-img.jpg" class="img-fluid w-100" alt="Blog Image">
                            <div class="blog-overlay">
                                <a class="btn btn-lg btn-primary px-3" href="#blog4">Read More</a>
                            </div>
                        </div>
                        <div class="blog-content bg-light rounded p-4 h-100">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-primary"><i class="far fa-calendar-alt me-2"></i>September 5, 2023</span>
                                <span class="text-muted"><i class="fas fa-user me-2"></i>Admin</span>
                            </div>
                            <h5 class="text-uppercase mb-3">Top 5 Scenic Drives in the United States</h5>
                            <p class="mb-4">From coastal highways to mountain passes, discover America's most breathtaking road trip routes perfect for your next car rental adventure.</p>
                            <a class="btn btn-sm btn-primary" href="#blog4">Read More</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <nav class="mt-5 wow fadeInUp" data-wow-delay="0.1s">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
