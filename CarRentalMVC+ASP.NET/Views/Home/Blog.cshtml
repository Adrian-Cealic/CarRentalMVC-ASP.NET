<style>
    .blog-item {
        transition: all 0.3s;
    }
    
    .blog-item:hover {
        transform: translateY(-5px);
    }
    
    .blog-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.4);
        opacity: 0;
        transition: all 0.5s;
    }
    
    .blog-item:hover .blog-overlay {
        opacity: 1;
    }
    
    .sidebar-item a:hover {
        background-color: rgba(var(--bs-primary-rgb), 0.1);
        color: var(--bs-primary) !important;
    }
</style> 